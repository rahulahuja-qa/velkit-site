{
  "version": 2,
  "builds": [
    {
      "src": "api/builder/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/builder",
      "dest": "api/builder/index.py",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/builder",
      "dest": "/public/builder.html"
    },
    {
      "src": "/review",
      "dest": "/public/review.html"
    },
    {
      "src": "/training",
      "dest": "/public/training.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}